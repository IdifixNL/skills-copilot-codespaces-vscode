{
    // Name this configuration
    "name": "Codespace for Skills!",
    // Use the base codespace image 1
    "image": "mcr.microsoft.com/vscode/devcontainers/universal:latest",
    "remoteUser": "codespace",
    "overrideCommand": false,
    "postCreateCommand": "echo 'Container has been created!'",
    "customizations": {
        "vscode": {
            "extensions": [
                "GitHub.copilot"
            ]
        },
        "codespaces": {
            "openFiles": [
                "codespace.md"
            ]
        }
    }
}